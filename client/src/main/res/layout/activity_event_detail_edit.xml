<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="当前状态"/>

            <TextView
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font14"
                android:text="草稿"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="事件编号"/>

            <TextView
                android:id="@+id/bill_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font14"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="发布日期"/>

            <TextView
                android:id="@+id/bill_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font14"
                android:text="2016-5-12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="等级"/>

            <Spinner
                android:id="@+id/spin_rank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner"
                >
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="车牌号"/>

            <Spinner
                android:id="@+id/spin_car_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner">
            </Spinner>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="路线编号"/>

            <Spinner
                android:id="@+id/spin_route"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner">
            </Spinner>
        </LinearLayout>


        <EditText
            android:visibility="gone"
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_edittext_layout"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/font16"
            android:background="@drawable/bg_login_edittet"
            android:layout_marginBottom="8dp"
            android:hint="输入用户名称"
            android:maxLines="1"
            android:maxLength="16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="用户编号"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font14"
                android:text="username"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="用户手机号"/>

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font14"
                android:text="usermobile"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="方向"/>

            <Spinner
                android:id="@+id/spin_direction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="类别"/>

            <Spinner
                android:id="@+id/spin_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner"
                android:layout_marginBottom="8dp">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="项目"/>

            <Spinner
                android:id="@+id/spin_project"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner"
                android:layout_marginBottom="8dp">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="项目类别"/>

            <Spinner
                android:id="@+id/spin_project_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner"
                android:layout_marginBottom="8dp">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="处理类别"/>

            <Spinner
                android:id="@+id/spin_deal_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner"
                android:layout_marginBottom="8dp">
            </Spinner>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="数量"/>

            <EditText
                android:id="@+id/et_count"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="@dimen/height_edittext_layout"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font16"
                android:maxLines="1"
                android:maxLength="16"
                android:inputType="numberSigned"/>

            <Spinner
                android:id="@+id/spin_count_unit"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="处理情况"/>

            <Spinner
                android:id="@+id/spin_deal_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner"
                android:layout_marginBottom="8dp">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="施工单位"/>

            <Spinner
                android:id="@+id/spin_construction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner"
                android:layout_marginBottom="8dp">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="预估时间"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_border_select_date">

                <TextView
                    android:id="@+id/text_estimate_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/text_color_gray"
                    android:textSize="16dp"
                    android:text="选择预计完成时间"/>

                <ImageView
                    android:id="@+id/img_choose_time"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:src="@drawable/calendar"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/font14"
                android:layout_marginRight="8dp"
                android:text="具体时间"/>

            <Spinner
                android:id="@+id/spin_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                android:background="@drawable/bg_spinner"
                android:layout_marginBottom="8dp">
            </Spinner>
        </LinearLayout>

        <CheckBox
            android:id="@+id/is_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font14"
            android:textColor="@color/text_color_normal"
            android:textDirection="ltr"
            android:layout_marginBottom="8dp"
            android:text="是否处理"/>

        <EditText
            android:id="@+id/memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/font16"
            android:hint="输入备注"
            android:minLines="5"
            android:inputType="textMultiLine"
            android:gravity="left|top"
            android:padding="8dp"
            android:background="@drawable/bg_multi_edittet"/>

        <GridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:numColumns="4"></GridView>

        <FrameLayout
            android:id="@+id/state_action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </FrameLayout>

    </LinearLayout>
</ScrollView>
